<mvc:View
    controllerName="login.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
        showHeader="false"
        class="vbox"
    >
        <content>
            <VBox
                id="loginBox"
                class="sapUiSmallMargin "
                justifyContent="Center"
                alignItems="Center"
                width="100%"
                alignContent="Center"
                fitContainer="true"
            >
                <Panel
                    id="panel1"
                    headerText="{i18n>loginpage}"
                    width="100%"
                    class="sapUiResponsiveMargin"
                    expandable="false"
                >
                    <VBox
                        id="_IDGenVBox"
                        class="sapUiSmallMargin"
                    >
                        <Label
                            id="_IDGenLabel"
                            text="Username"
                            labelFor="usernameInput"
                        />
                        <Input
                            id="usernameInput"
                            value="{/username}"
                            placeholder="Username"
                        />
                    </VBox>
                    <VBox
                        id="_IDGenVBox1"
                        class="sapUiSmallMargin"
                    >
                        <Label
                            id="_IDGenLabel1"
                            text="Password"
                            labelFor="passwordInput"
                        />
                        <Input
                            id="passwordInput"
                            type="Password"
                            value="{/password}"
                            placeholder="Password"
                        />
                    </VBox>
                    <VBox
                        id="clientVBox"
                        class="sapUiSmallMargin"
                    >
                        <Label
                            id="clientLabel"
                            text="Client"
                            labelFor="clientSelect"
                        />
                        <Select
                            id="clientSelect"
                            selectedKey="{/client}"
                            width="100%"
                        >
                            <items>
                                <core:Item
                                    id="_IDGenItem"
                                    key="120"
                                    text="120"
                                />
                                <core:Item
                                    id="_IDGenItem1"
                                    key="140"
                                    text="140"
                                />
                            </items>
                        </Select>
                    </VBox>
                </Panel>
            </VBox>
        </content>
        <footer>
            <Bar id="bar1">
                <contentRight>
                    <Button
                        id="loginButton"
                        type="Emphasized"
                        class="sapUiResponsiveMargin"
                        icon="sap-icon://log"
                        iconFirst="true"
                        text="Login"
                        press=".onLoginPress"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
